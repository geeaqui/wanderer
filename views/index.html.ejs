<!DOCTYPE html>
<html ng-app="wanderers">
<head>
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.4/angular.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.js"></script>
	<script src="https://www.gstatic.com/firebasejs/3.6.10/firebase.js"></script>
	<script src="https://cdn.firebase.com/libs/angularfire/2.3.0/angularfire.min.js"></script>
	<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular-resource/1.6.2/angular-resource.js"></script>
	
	<script type="text/javascript" src="js/app.js"></script>
	<script type="text/javascript" src="js/factories/auth.fact.js"></script>
	<script type="text/javascript" src="js/factories/user.fact.js"></script>
	<script type="text/javascript" src="js/factories/trip.fact.js"></script>
	<script type="text/javascript" src="js/controllers/auth.ctrl.js"></script>
	<script type="text/javascript" src="js/controllers/controller.js"></script>

	 <!-- Compiled and minified JavaScript -->
  <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/js/materialize.min.js"></script>
  <script type="text/javascript" src="js/index.js"></script>

	<!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/css/materialize.min.css">
  <link href="https://fonts.googleapis.com/css?family=Supermercado+One" rel="stylesheet">

  <link rel="stylesheet" type="text/css" href="css/style.css">

          
	<title>Wanderer</title>
</head>
<body ng-controller="authenticationController as auth">
	<nav id="nav-bar" class="nav-extended">
		<div class="nav-wrapper">
			<ul id="nav-mobile" class="col l12 right hide-on-med-and-down">
				<li class="col s12 m1"><a href="#" ui-sref="wanderer">Wanderer</a></li>
				<li class="col s12 m1"><a href="#" ui-sref="home">Explore</a></li>
				<li class="col s12 m2"><a href="#" ui-sref="bucket">Bucket Lista</a></li>
				<li id="login-li" ng-if="!auth.user" class="col s12 m2 offset-m6"><a href="#" ui-sref="login">Log-in/Register</a></li>
				<li id="signOut-li" ng-if="auth.user" class="col s12 m2 offset-m6" ng-click="auth.signOut()"><a href="#">Sign-out</a></li>
			</ul>

			<ul id="slide-out" class="side-nav">
			    <li id="wanderer-nav" class="col s12 m1"><a href="#" ui-sref="wanderer">Wanderer</a></li>
			    <li><div class="divider"></div></li>
			    <li class="col s12 m1"><a href="#" ui-sref="home">Explore</a></li>
			    <li class="col s12 m2"><a href="#" ui-sref="bucket">Bucket Lista</a></li>
			    <li ng-if="!auth.user" class="col s12 m2 offset-m6"><a href="#" ui-sref="login">Log-in/Register</a></li>
			    <li ng-if="auth.user" class="col s12 m2 offset-m6" ng-click="auth.signOut()"><a href="#">Sign-out</a></li>
		  </ul>
		  <a href="#" data-activates="slide-out" class="button-collapse"><i class="material-icons">menu</i></a>
	  </div>
  	</nav>

	<section class="userWidget headerElement">
	    <div ng-if="auth.user">
	      <p id="welcome-msg">Welcome {{auth.user.email}}, </p>
	    </div>

	</section>
	
	<section ui-view ng-controller="tripController as trips">

	<!-- ui-view Section -->


	</section>
</body>
</html>