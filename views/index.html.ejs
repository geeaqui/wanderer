<!DOCTYPE html>
<html ng-app="wanderers">
<head>
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.4/angular.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.js"></script>
	<script src="https://www.gstatic.com/firebasejs/3.6.10/firebase.js"></script>
	<script src="https://cdn.firebase.com/libs/angularfire/2.3.0/angularfire.min.js"></script>
	<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular-resource/1.6.2/angular-resource.js"></script>
	
	<script type="text/javascript" src="js/app.js"></script>
	<script type="text/javascript" src="js/factories/auth.fact.js"></script>
	<script type="text/javascript" src="js/factories/user.fact.js"></script>
	<script type="text/javascript" src="js/controllers/auth.ctrl.js"></script>
	<script type="text/javascript" src="js/controllers/controller.js"></script>

	 <!-- Compiled and minified JavaScript -->
  <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/js/materialize.min.js"></script>

	<!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/css/materialize.min.css">

  <link rel="stylesheet" type="text/css" href="css/style.css">

          
	<title>Wanderer</title>
</head>
<body ng-controller="authenticationController as auth">
	<nav id="nav-bar" class="row">
		<ul class="col l12">
			<li><a href="#" ui-sref="home">Explore</a></li>
			<li><a href="#" ui-sref="bucket">Bucket Lista</a></li>
		</ul>
	</nav>

		<section class="userWidget headerElement">
		    <div ng-if="auth.user">
		      <p>Welcome {{auth.user.email}}, remember to keep our secrets a secret</p>
		      <a href="#" ng-click="auth.signOut()">Click Here</a> to sign out
		    </div>

		    <div ng-if="!auth.user" class="container">
			    <div class="row session">
			      <a class="col s4 offset-s2 m3 offset-m3 btn waves-effect waves-light navigation" href="#" ui-sref="login">Log-in</a>
			      <a class="col s4 m3 btn waves-effect waves-light navigation" href="#" ui-sref="signup">Register</a>
			    </div>
		    </div>
		</section>
	<section ui-view>
	</section>
</body>
</html>